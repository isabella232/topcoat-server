body
	padding: 50px
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
	color: #00B7FF
svg
	top 200px

table
	border-collapse: collapse
	width 100%

td
	border none
	margin 0
	padding:.5em
	text-align center

thead tr:hover
	background none

tbody tr:nth-child(4n)
	border-bottom 1px solid #555

tbody tr:nth-child(4n+1)
	border-bottom 1px solid #555

tr
	-webkit-transition-duration .1s
	&:hover
		background #f4f4f4

.hide
	display none